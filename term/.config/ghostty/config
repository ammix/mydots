# Shell
command = "fish"
shell-integration-features = cursor,sudo,title,ssh-env,ssh-terminfo

# Window and Layout
theme = Catppuccin Mocha
background = "#11111b"
background-opacity = 0.8
window-decoration = "none"
window-show-tab-bar=never
window-inherit-working-directory = true
confirm-close-surface = false
window-padding-x = 5
window-padding-balance = true
maximize = false
unfocused-split-opacity = 1.0

# Font
font-size = 13
font-family = "Fira Code"
font-family = "Symbols Nerd Font Mono"
font-family-italic = "Victor Mono"

# Cursor
cursor-style = bar
cursor-color=cell-foreground
cursor-text=cell-background
selection-foreground=cell-background
selection-background=cell-foreground

keybind = all:ctrl+t=new_tab
keybind = ctrl+enter=new_split:right
keybind = alt+v=new_split:down

keybind = ctrl+shift+arrow_down=goto_split:down
keybind = ctrl+shift+arrow_left=goto_split:left
keybind = ctrl+shift+arrow_right=goto_split:right
keybind = ctrl+shift+arrow_up=goto_split:up

custom-shader = shaders/cursor.glsl
